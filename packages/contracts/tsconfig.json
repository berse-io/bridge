{
    "compilerOptions": {
        "rootDir": ".",
        "outDir": "lib/",
        "lib": [
            "es2016",
            "es2018",
            "dom"
        ],
        "typeRoots": [
          "node_modules/@types"
        ],
        "target": "es2018",
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "moduleResolution": "node",
        "module": "commonjs",
        "inlineSourceMap": true,
        "declaration": true,
        "composite": true,
        "resolveJsonModule": true
    },
    "include": [
        "./build/wrappers/*",
        "./build/artifacts/*.json",
        "test"
    ],
    "exclude": [
        "node_modules"
    ]
}