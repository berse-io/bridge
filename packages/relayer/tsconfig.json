{
    "compilerOptions": {
        "outDir": "lib",
        "rootDir": ".",
        "lib": [
            "es2018",
            "dom"
        ],
        "typeRoots": [
          "node_modules/@0x/typescript-typings/types",
          "node_modules/@types"
        ],
        "target": "es2018",
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "moduleResolution": "node",
        "module": "commonjs",
        "sourceMap": true
    },
    "include": [
        "./src/*"
    ],
    "exclude": [
        "node_modules/**"
    ]
}