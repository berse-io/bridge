{
    "compilerOptions": {
        "outDir": "lib",
        "rootDir": ".",
        "lib": [
            "es2018",
            "dom",
            "esnext.asynciterable"
        ],
        "typeRoots": [
            "node_modules/@types"
        ],
        "target": "es2018",
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "moduleResolution": "node",
        "module": "commonjs",
        "sourceMap": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
    },
    "include": [
        "src",
        "test",
    ],
    "exclude": [
        "**/node_modules"
    ],
    "references": [
        { "path": "../contracts" },
        { "path": "../multichain" }
    ]
}