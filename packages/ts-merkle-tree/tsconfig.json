{
    "compilerOptions": {
        "composite": true,
        "lib": [
            "es2018",
            "dom"
        ],
        "rootDir": ".",
        "outDir": "lib",
        "typeRoots": [
          "node_modules/@0x/typescript-typings/types",
          "node_modules/@types"
        ],
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "moduleResolution": "node",
        "module": "commonjs",
        "sourceMap": true,
        "declaration": true,
        "declarationMap": true
    },
    "include": [
        "src",
        "build/wrappers/*.ts",
        "build/artifacts/*.json"
    ],
    "exclude": [
        "**/node_modules"
    ]
}