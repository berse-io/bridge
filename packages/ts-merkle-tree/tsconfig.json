{
    "compilerOptions": {
        "composite": true,
        "lib": [
            "dom",
            "es2018",
        ],
        "rootDir": ".",
        "outDir": "lib",
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "moduleResolution": "node",
        "module": "commonjs",
        "sourceMap": true,
        "declaration": true,
        "declarationMap": true,
        "target": "es2018"
    },
    "include": [
        "src",
        "test",
        "build/wrappers/*.ts",
        "build/artifacts/*.json"
    ],
    "exclude": [
        "**/node_modules"
    ]
}